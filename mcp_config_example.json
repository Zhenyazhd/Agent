{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "YOUR_WORKSPACE_PATH"],
      "env": {}
    },
    "postgres": {                                                                                                          
      "command": "npx",                                                                                                    
      "args": ["-y", "@anthropic/mcp-server-postgres"],                                                                    
      "env": { "DATABASE_URL": "YOUR_DATABASE_URL" }                                                                         
    },        
    "OpenZeppelinSolidityContracts": {
      "type": "streamable-http",
      "url": "https://mcp.openzeppelin.com/contracts/solidity/mcp"
    },
    "slither-mcp": {
      "command": "uvx --from git+https://github.com/trailofbits/slither-mcp slither-mcp"
    },
    "blockscout": {
      "type": "streamable-http",                                                                                               
      "url": "https://mcp.blockscout.com/mcp",
      "timeout": 180000
    },
    "foundry": {
      "command": "npx",
      "args": ["@pranesh.asp/foundry-mcp-server"],
      "env": {
        "RPC_URL": "https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY",
        "PRIVATE_KEY": "0x..."
      }
    }
   
  }
}
